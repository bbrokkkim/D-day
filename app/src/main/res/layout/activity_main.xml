<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v4.widget.DrawerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/drawerlayout"
        android:background="#c7c7c7"
        tools:context=".Activity.GameActivity" >

        <LinearLayout
            android:id="@+id/activity_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context="com.example.kkk.dday.MainActivity">




            <android.support.v7.widget.Toolbar
                android:title="회원가입"
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:contentInsetLeft="0dp"
                android:contentInsetStart="0dp"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                android:contentInsetRight="0dp"
                android:contentInsetEnd="0dp"
                app:contentInsetRight="0dp"
                app:contentInsetEnd="0dp"
                android:background="#EBECED"
                android:weightSum="10">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/ic_action_name_navigater"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/navigater"
                        android:layout_weight="1" />

                    <TextView
                        android:text="DAILY DAY"
                        android:textSize="30dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:id="@+id/title_name"
                        android:layout_weight="1" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:background="@drawable/ic_action_name_list_order"
                        android:layout_gravity="right"
                        android:id="@+id/list_order"
                        android:layout_weight="1" />


                </FrameLayout>

            </android.support.v7.widget.Toolbar>


            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/photo_day_list"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:orientation="vertical"
            android:background="#EBECED"
            android:id="@+id/navigation">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="vertical"
                android:layout_marginTop="50dp">


                <Button
                    android:text="  디데이 추가"
                    android:textSize="20dp"
                    android:gravity="center_vertical|left"
                    android:layout_width="match_parent"
                    android:drawableLeft="@drawable/ic_action_name_dday_add"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="#00000000"
                    android:id="@+id/dday_add" />
                <Button
                    android:text="  설정"
                    android:textSize="20dp"
                    android:gravity="center_vertical|left"
                    android:layout_width="match_parent"
                    android:drawableLeft="@drawable/ic_action_name_setting"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="#00000000"
                    android:id="@+id/setting" />
                <Button
                    android:text="  광고제거"
                    android:textSize="20dp"
                    android:gravity="center_vertical|left"
                    android:layout_width="match_parent"
                    android:drawableLeft="@drawable/ic_action_name_adver"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="#00000000"
                    android:id="@+id/adver"/>
                <Button
                    android:text="  별점 남기기"
                    android:textSize="20dp"
                    android:gravity="center_vertical|left"
                    android:layout_width="match_parent"
                    android:drawableLeft="@drawable/ic_action_name_check"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="#00000000"
                    android:id="@+id/check"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:orientation="vertical"
                android:background="#919191"
                android:layout_marginTop="50dp">
                <Button
                    android:text=" DAILY PAY"
                    android:textSize="20dp"
                    android:gravity="center_vertical|left"
                    android:layout_width="match_parent"
                    android:drawableLeft="@drawable/ic_action_name_check"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="#00000000"
                    android:id="@+id/pay"/>
                <Button
                    android:text=" DAILY NOTE"
                    android:textSize="20dp"
                    android:gravity="center_vertical|left"
                    android:layout_width="match_parent"
                    android:drawableLeft="@drawable/ic_action_name_check"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="#00000000"
                    android:id="@+id/note"/>
            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.DrawerLayout>

</layout>