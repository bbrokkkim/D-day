<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <LinearLayout
            android:id="@+id/activity_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#c7c7c7"
            tools:context="com.example.kkk.dday.MainActivity">




            <android.support.v7.widget.Toolbar
                android:title="회원가입"
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:contentInsetLeft="0dp"
                android:contentInsetStart="0dp"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                android:contentInsetRight="0dp"
                android:contentInsetEnd="0dp"
                app:contentInsetRight="0dp"
                app:contentInsetEnd="0dp"
                android:background="#EBECED"
                android:weightSum="10">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/ic_action_name_exit"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/navigater"
                        android:layout_weight="1" />

                    <TextView
                        android:text="디데이 추가"
                        android:textSize="30dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:id="@+id/title_name"
                        android:layout_weight="1" />




                </FrameLayout>

            </android.support.v7.widget.Toolbar>



            <!--title-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="40dp"
                android:background="#ffffff"
                android:orientation="horizontal">


                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:inputType="textPersonName"
                    android:text="Name"
                    android:hint="제목"
                    android:padding="3dp"
                    android:ems="10"
                    android:id="@+id/sche_title" />
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/ic_launcher"
                    android:id="@+id/sche_color_select" />


            </LinearLayout>


            <!--date-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#ffffff"
                android:orientation="horizontal">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:text="date"
                    android:padding="3dp"
                    android:background="#00000000"
                    android:ems="10"
                    android:id="@+id/date" />
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/ic_launcher"
                    android:id="@+id/date_image" />
            </LinearLayout>


            <!--type-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="40dp"
                android:background="#ffffff"
                android:orientation="horizontal">


                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:inputType="textPersonName"
                    android:text="type"
                    android:hint="제목"
                    android:padding="3dp"
                    android:ems="10"
                    android:id="@+id/type" />
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/ic_launcher"
                    android:id="@+id/color_select" />


            </LinearLayout>

            <!--cover-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"

                android:background="#ffffff"
                android:orientation="horizontal">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:text="커버사진"
                    android:padding="3dp"
                    android:background="#00000000"
                    android:ems="10"
                    android:id="@+id/cover" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    app:srcCompat="@mipmap/ic_launcher"
                    android:id="@+id/cover_photo" />
            </LinearLayout>

            <!--상단바 고정-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="40dp"
                android:background="#ffffff"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:text="상단바에 고정"
                    android:padding="3dp"
                    android:background="#00000000"
                    android:ems="10"
                    android:id="@+id/noti_fit" />
                <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/ic_launcher"
                    android:id="@+id/noti_check" />
            </LinearLayout>

            <!--상단바 아이콘-->
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#ffffff"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:text="상단바 아이콘"
                android:padding="3dp"
                android:background="#00000000"
                android:ems="10"
                android:id="@+id/noti_icon" />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/noti_icon_photo" />
            </LinearLayout>

            <!--100일단위 알림-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#ffffff"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:text="100일단위 알림"
                    android:padding="3dp"
                    android:background="#00000000"
                    android:ems="10"
                    android:id="@+id/hundred_alarm" />
                <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/ic_launcher"
                    android:id="@+id/hundred_checkbox" />
            </LinearLayout>

            <!--1년단위 기념알림-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#ffffff"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:text="1년 단위 기념알림"
                    android:padding="3dp"
                    android:background="#00000000"
                    android:ems="10"
                    android:id="@+id/year_alarm" />
                <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/ic_launcher"
                    android:id="@+id/year_checkbox" />
            </LinearLayout>



            <Button
                android:text="등록"
                android:textColor="#ffffff"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#353535"
                android:id="@+id/submit" />

        </LinearLayout>
    </layout>